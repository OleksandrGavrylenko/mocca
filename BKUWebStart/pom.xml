      <plugin>
         <!-- unpack BKULocal prior to webstart jar generation to include -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <!-- unpack BKULocalWar to classpath
